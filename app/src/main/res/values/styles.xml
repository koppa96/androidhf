<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppThemeActionbar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDarkAlpha</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <style name="CardViewStyle" parent="CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/colorDarkBackgroundAlpha</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="contentPaddingTop">20dp</item>
        <item name="contentPaddingBottom">20dp</item>
        <item name="contentPaddingLeft">10dp</item>
        <item name="contentPaddingRight">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    
    <style name="MessageStyle" parent="CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="contentPaddingTop">10dp</item>
        <item name="contentPaddingBottom">10dp</item>
        <item name="contentPaddingLeft">15dp</item>
        <item name="contentPaddingRight">25dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="CurvedButtonStyle">
        <item name="android:background">@drawable/rounded_button_bg</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
    </style>

</resources>
